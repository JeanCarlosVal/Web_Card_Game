<script type="module" src="/js/games/poker/poker.js"></script>
<link rel="stylesheet" href="./public/css/poker.css">

<div class="leaderboard">
    <table>
        <tr><h3>Poker Wins Leaders</h3></tr>
        <% for (var i = 0; i < leaders.length; i++) { %>
            <tr> <td><%= leaders[i].username %></td> <td><%= leaders[i].poker.wins %> <td></tr>
        <% } %>
</table>
</div>

<div class="createRoomDisplay">
    <p>Create a room or join an available room</p>
    <button id="createRoom"> Create Room </button>
    <input type="text" id="room">
    <button id="rooms">Refresh Rooms</button>
</div>

<div class="rooms-table">
    <table>
        <tr>
            <th>Available Rooms</th>
            <th>Active Players</th>
            <th>Join</th>
        </tr>
    </table>
</div>
<div id="available-rooms"></div>

<div id="game" class="game">
    <div class="table">
        <div id="player1" class="player1">
            <div class="player1-info">
                <p id="player1-status">Status</p>
                <p id="player1-chips">Chips</p>
            </div>
        </div>
        <div id="player2" class="player2">
            <div class="player2-info">
                <p id="player2-status">Status</p>
                <p id="player2-chips">Chips</p>
            </div>
        </div>
        <div id="player3" class="player3">
            <div class="player3-info">
                <p id="player3-status">Status</p>
                <p id="player3-chips">Chips</p>
            </div>
        </div>
        <div id="player4" class="player4">
            <div class="player4-info">
                <p id="player4-status">Status</p>
                <p id="player4-chips">Chips</p>
            </div>
        </div>
        <div id="player5" class="player5">
            <div class="player5-info">
                <p id="player5-status">Status</p>
                <p id="player5-chips">Chips</p>
            </div>
        </div>
        <div id="player6" class="player6">
            <div class="player6-info">
                <p id="player6-status">Status</p>
                <p id="player6-chips">Chips</p>
            </div>
        </div>
        <div class="deck-of-cards">
            <div id="table-card-1" class="table-card-1"></div>
            <div id="table-card-2" class="table-card-2"></div>
            <div id="table-card-3" class="table-card-3"></div>
            <div id="table-card-4" class="table-card-4"></div>
            <div id="table-card-5" class="table-card-5"></div>
        </div>
    </div>
    <div class="userpokertemplate">
        <div id="user-card-1" class="user-card-1"></div>
        <div id="user-card-2" class="user-card-2"></div>
        <div class="user-options">
            <button class="fold-button" role="button" id="fold"> FOLD </button>
            <button class="check-button" id="check"> CHECK </button>
            <button class="raise-button" id="raise"> RAISE BET </button>
            <div class="slidecontainer">
                <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                <p>Chips: <span id="demo"></span></p>
            </div>
        </div>
    </div>
</div>
<script type="module" src="/js/games/poker/poker.js"></script>